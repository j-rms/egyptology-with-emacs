(require 'quail)
(quail-define-package
 "transliteration" "Transliteration" "ḫ" nil
 "Providing an Egyptian transliteration scheme for Emacs. At present requires, at minimum, New Athena Unicode."
 nil t t t t nil nil nil nil nil t)
(quail-define-rules
 ("A" ?ꜣ) 

("i" ["i̓"]) ; a widely available cheat
;; ("i" ?ꞽ) ; the correct sign

;; ("I" ?Ꞽ) ; the capital of the correct sign. 

 ("y" ?y)

 ("a" ?ꜥ)

 ("w" ?w) 

 ("b" ?b)

 ("p" ?p)

 ("f" ?f)

 ("m" ?m)

 ("n" ?n)

 ("r" ?r)

 ("h" ?h)
 
 ("H" ?ḥ)
 
 ("x" ?ḫ)
 
 ("X" ?ẖ)
 
 ("s" ?s)
 
 ("S" ?š)
 
 ("q" ?ḳ)
 
 ("k" ?k)
 
 ("g" ?g)
 
 ("t" ?t)
 
 ("T" ?ṯ)
 
 ("d" ?d)
 
 ("D" ?ḏ)

 ("=" ?⸗) ; the correct sign

 ;; ("=" ?꞊) ; a more widely available sign

 ("-" ?‑) ; replace minus with non-breaking hyphen for marking dependent pronouns

 ("<" ?⟨) ; emendations
 
 (">" ?⟩) ; emendations
 
 ;; ("{" ?⸢)

 ;; ("}" ?⸣)

 ("{" ?{)

 ("}" ?})

 ("*" ?⋆) ; grammatically incorrect

 ("0" ?ø) ; unexpressed thing

 ("'" ?ˈ) ; primary stress

 ("@" ?ˌ) ; secondary stress

 ("#" ? ) ; tab (for second line of couplet)

 ("~" ?‖) ; caesura

 ("v" ?ṱ) ; Demotic ti.

 ("!" ?•) ; verse point.
 
)


